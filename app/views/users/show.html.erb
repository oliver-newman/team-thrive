<% provide(:title, @user.full_name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user, size: 80 %>
        <%= @user.full_name %>
      </h1>
    </section>
    <section class="social-stats">
      <div class="social-stats">
        <a href="<%= following_user_path(@user) %>">
          <strong id="following" class="social-stat">
            <%= @user.following.count %>
          </strong> Following
        </a>
        <a href="<%= followers_user_path(@user) %>">
          <strong id="followers" class="social-stat">
            <%= @user.followers.count %>
          </strong> Followers
        </a>
      </div>
    </section>
    <%= render 'follow_form' if logged_in? %>
  </aside>

  <div class="col-md-8">
    <% if @show_follow %>
      <h3><%= @title %></h3>
      <% if @users.any? %>
        <ol class="users follow">
          <%= render @users %>
        </ol>
      <% end %>
      <%= will_paginate @users %>
    <% else %>
      <% if @user.activities.any? %>
        <h3>Recent Activities</h3>
        <ol class="activities">
          <%= render @activities %>
        </ol>
        <%= will_paginate @activities %>
      <% end %>
    <% end %>
  </div>
</div>

<% if false %>
  <% if @user.strava_id %>
    <h3>Strava Stats</h3>
    <% strava_stats_for(@user).each do |stat, data| %>
      <% if data.class == Hash %>
        <h4><%= stat.titleize %>:</h4>
        <% data.each do |substat, subdata| %>
          <p><%= substat.titleize %>: <%= subdata %></p>
        <% end %>
      <% else %>
        <p><%= stat.titleize %>: <%= data %></p>
      <% end %>
    <% end %>
  <% end %>
<% end %>
