<% provide(:title, 'Sign Up') %>

<h1>Sign Up</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(@user, url: signup_path) do |form| %>
      <%= render 'shared/error_messages' %>

      <%= form.text_field :first_name, class: "half-field half-field-left form-control",
                                      placeholder: "First name" %>
      <%= form.text_field :last_name, class: "half-field half-field-right form-control",
                                     placeholder: "Last name" %>

      <%= form.email_field :email, class: "form-control", 
                                   placeholder: "Email" %>

      <%= form.password_field :password, class: "form-control", 
                                         placeholder: "Password" %>
      <%= form.password_field :password_confirmation, class: "form-control",
                              placeholder: "Confirm password" %>

      <%= form.submit "Create my account", class: "btn btn-primary" %>
    <% end %>

    <%= link_to image_tag("connect_with_strava/" +
                            "btn_strava_connectwith_light/" +
                            "btn_strava_connectwith_light.png",
                          alt: "Connect with Strava"),
                'https://strava.com/' %>

  </div>
</div>
