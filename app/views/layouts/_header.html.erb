<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to render('layouts/logo'), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="link"><%= link_to "Dashboard", dashboard_path %></li>
          <li class="link dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Connect <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Feed", feed_path %></li>
              <li><%= link_to "Users", users_path %></li>
            </ul>
          </li>
          <li class="link dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.full_name %><%= gravatar_for current_user, size: 30 %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log Out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="link"><%= link_to "Home", root_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
